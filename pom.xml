      </exclusions>
      <scope>system</scope>
      <systemPath>Z:\Minecraft Development\Local Dependences\WorldEdit.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.bekvon.bukkit</groupId>
      <artifactId>Residence</artifactId>
      <version>2.6.6.6</version>
      <scope>system</scope>
      <systemPath>Z:\Minecraft Development\Local Dependences\Residence.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.massivecraft</groupId>
      <artifactId>Factions</artifactId>
      <version>2.8.7Beta</version>
      <scope>system</scope>
      <systemPath>Z:\Minecraft Development\Local Dependences\Factions.jar</systemPath>
    </dependency>
    <dependency><!-- Required by Factions -->
      <groupId>com.massivecraft</groupId>
      <artifactId>mcore</artifactId>
      <version>2.8.7Beta</version>
      <scope>system</scope>
      <systemPath>Z:\Minecraft Development\Local Dependences\MassiveCore.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>me.tabinol.factoid</groupId>
      <artifactId>Factoid</artifactId>
      <version>1.0.1</version>
      <scope>system</scope>
      <systemPath>Z:\Minecraft Development\Local Dependences\Factoid-1.0.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>net.milkbowl.vault</groupId>
      <artifactId>VaultAPI</artifactId>
      <version>1.6</version>
    </dependency>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.3.160</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.9</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>plugin.yml</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
	<version>2.3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
	<version>2.3.2</version>
        <configuration>
          <archive>
	    <manifest>
	      <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
	    </manifest>
            <manifestEntries>
	      <Implementation-Build>${buildNumber}</Implementation-Build>
              <Class-Path>lib/ToHPluginUtils.jar ${project.artifactId}/ToHPluginUtils.jar ../lib/ToHPluginUtils.jar ../ToHPluginUtils.jar</Class-Path>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.4.0</version>
        <configuration>
          <xmlOutput>true</xmlOutput>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jenkinsBuildNumber</id>
      <activation>
        <property>
          <name>env.BUILD_NUMBER</name>
        </property>
      </activation>
      <build>
        <finalName>${project.artifactId}-${project.version}-b${env.BUILD_NUMBER}</finalName>
      </build>
    </profile>
    <profile>
      <id>buildNumber</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>buildnumber-maven-plugin</artifactId>
            <version>1.0</version>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>create</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <doCheck>false</doCheck>
              <doUpdate>false</doUpdate>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>unknownBuildNumber</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <buildNumber>unknown</buildNumber>
      </properties>
    </profile>
    <profile>
      <id>standalone</id>
      <build>
	<plugins>
	  <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-shade-plugin</artifactId>
	    <version>1.5</version>
	    <executions>
	      <execution>
		<phase>package</phase>
		<goals>
		  <goal>shade</goal>
		</goals>
		<configuration>
		  <artifactSet>
		    <includes>
		      <include>org.tyrannyofheaven.bukkit:ToHPluginUtils</include>
		    </includes>
		  </artifactSet>
		  <relocations>
		    <relocation>
		      <pattern>org.tyrannyofheaven.bukkit.util</pattern>
		      <shadedPattern>org.tyrannyofheaven.bukkit.zPermissions.util</shadedPattern>
		    </relocation>
		  </relocations>
		</configuration>
	      </execution>
	    </executions>
	  </plugin>
